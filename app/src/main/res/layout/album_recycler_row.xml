<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:id="@+id/cv"
    android:layout_margin="4dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    card_view:cardCornerRadius="10dp"
    android:background="@color/background_card">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/album_card_image"
            android:transitionName="profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_margin="@dimen/spacing_tiny"
            android:background="@drawable/rounded"/>

        <TextView
            android:id="@+id/album_card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="@+id/album_card_image"
            android:layout_toEndOf="@+id/album_card_image"
            android:layout_toRightOf="@+id/album_card_image"
            android:maxWidth="200dp"
            android:padding="@dimen/image_card_padding"
            android:textSize="@dimen/text_large"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/colorPrimary"
            tools:text="Best Album" />

        <TextView
            android:id="@+id/album_card_artist_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/album_card_title"
            android:layout_toEndOf="@+id/album_card_image"
            android:layout_toRightOf="@+id/album_card_image"
            android:padding="@dimen/image_card_padding"
            android:layout_marginBottom="@dimen/spacing_tiny"
            android:textColor="@color/colorPrimary"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="Artiste name" />

        <TextView
            android:id="@+id/album_card_count_track"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/album_card_artist_name"
            android:layout_toEndOf="@+id/album_card_image"
            android:layout_toRightOf="@+id/album_card_image"
            android:padding="@dimen/image_card_padding"
            android:layout_marginBottom="@dimen/spacing_tiny"
            android:textColor="@color/colorPrimary"
            tools:text="Artiste name" />

    </RelativeLayout>
</android.support.v7.widget.CardView>